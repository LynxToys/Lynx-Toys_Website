<%= form_for(Creation.new , :html => { :multipart => true }) do |f| %>

  <div class="name">
   <%= f.label :name %><br>
   <%= f.text_field :name %>
  </div>
  <div class="field">
	<%= f.label :image %><br />
	<%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>