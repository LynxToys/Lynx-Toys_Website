<%= form_for @creation, :url => creations_path, :html => { :multipart => true } do |f| %>
  <div class="name">
   <%= f.label :name %><br>
   <%= f.text_field :name %>
  </div>
  <div class="image">
   <%= f.label :image %><br>
   <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
