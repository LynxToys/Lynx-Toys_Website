<h3 style="text-align:left; margin: 4% 4% 0;"><%= link_to 'New Creation', new_creation_path %></h3>
<h2 class="style">Explore the creations from our community</h2>
<div class="container" style="margin-top:-5%"><!-- start main -->
  <div class="main row">
     <div class="grids_of_4 row">
       
        <% @creations.each do |creation| %>
          <div class="col-md-3 images_1_of_4">
            <div class="fancyDemo">
              <a rel="group" title="" href=<%= creation_path(creation) %>>
		<% unless creation.pictures.empty? %>
 		  <%= image_tag creation.pictures[0].image.url, class: "img-responsive" %>
                <% end %>
	      </a>
            </div>
             <p class="para"><%= creation.name %></p>
             <h4><%= link_to 'Show', creation %></h4>
             <h4><%= link_to 'Delete', creations_delete_path(creation) %></h4>
          </div>
      
        <% end %>
        
      </div>
  </div>
</div><!-- end main -->