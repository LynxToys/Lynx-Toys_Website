<%= render 'shared/topnav' %>

<div class="container"><!-- start main -->
  <div class="main row">
    <h2 class="style">Explore the creations from our community</h2>
     <div class="grids_of_4 row">
       
        <% @creations.each do |creation| %>
          <div class="col-md-3 images_1_of_4">
            <div class="fancyDemo">
              <a rel="group" title="" href=<%= creation_path(creation) %>><%= image_tag creation.pictures[0].image.url, class: "img-responsive" %></a>
            </div>
             <p class="para"><%= creation.name %></p>
             <h4><%= link_to 'Show', creation %></h4>
             <h4><%= link_to 'Edit', edit_creation_path(creation) %></h4>
             <h4><%= link_to 'Delete', creations_delete_path(creation) %></h4>
          </div>
      
        <% end %>
        
      </div>
  </div>
</div><!-- end main -->
<div class="footer_bg" id="contact"><!-- start footer -->
  <div class="container">
    <div class="row footer">
      <div class="col-md-8 contact_left">
        <h3><%= link_to 'New Creation', new_creation_path %></h3>
      </div>  
    </div>
  </div>
</div>

<%= render 'shared/footnav' %>
